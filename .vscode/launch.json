{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Start Mobile App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/mobile/my-app/node_modules/.bin/expo",
      "args": ["start"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/mobile/my-app"
    }
  ]
}
